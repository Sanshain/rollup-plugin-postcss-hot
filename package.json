{
  "name": "rollup-plugin-postcss-hot",
  "version": "0.0.5",
  "description": "Seamless integration between Rollup and PostCSS with HMR support",
  "main": "dist/index.js",
  "files": [
    "dist",
    "style-inject.js"
  ],
  "scripts": {
    "test": "echo TODO",
    "test:cov": "npm run lint && jest --coverage",
    "build": "rollup -c",
    "lint": "xo",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rixo/rollup-plugin-postcss-hot.git"
  },
  "keywords": [
    "postcss",
    "rollup"
  ],
  "author": "EGOIST <0x142857@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rixo/rollup-plugin-postcss-hot/issues"
  },
  "engines": {
    "node": ">=10"
  },
  "types": "./types/index.d.ts",
  "homepage": "https://github.com/rixo/rollup-plugin-postcss-hot#readme",
  "peerDependencies": {
    "rollup": ">2.2.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.8",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "rollup": "^4.18.0",
    "xo": "^0.58.0"
  },
  "dependencies": {
    "chalk": "^4.0.0",
    "concat-with-sourcemaps": "^1.1.0",
    "cssnano": "^4.1.10",
    "import-cwd": "^3.0.0",
    "p-queue": "^6.3.0",
    "pify": "^5.0.0",
    "postcss": "^8.2.10",
    "postcss-load-config": "^2.1.0",
    "postcss-modules": "^2.0.0",
    "promise.series": "^0.2.0",
    "resolve": "^1.16.1",
    "rollup-pluginutils": "^2.8.2",
    "safe-identifier": "^0.4.1",
    "style-inject": "^0.3.0"
  },
  "xo": {
    "extends": "rem",
    "envs": [
      "jest"
    ],
    "rules": {
      "import/prefer-default-export": 0,
      "import/extensions": 0,
      "import/no-unassigned-import": 0,
      "@typescript-eslint/semi": 0,
      "eslint-comments/disable-enable-pair": 0,
      "promise/prefer-await-to-then": 0
    }
  },
  "jest": {
    "testEnvironment": "node"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "6"
          }
        }
      ]
    ]
  },
  "release": {
    "branches": [
      "master",
      "next"
    ]
  }
}
